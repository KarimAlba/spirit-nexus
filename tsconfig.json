{
  "compilerOptions": {
    "target": "ES2017",
    "baseUrl": "src/",
    "strict": true,
    "paths": {
      "@/styles/*": ["app/styles/*"],
      "@/providers/*": ["app/providers/*"],
      "@/features/*": ["features/*"],
      "@/shared/*": ["shared/*"],
      "@/widgets/*": ["widgets/*"],
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
